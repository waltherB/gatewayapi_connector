<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gatewayapi_provider_view_form" model="ir.ui.view">
        <field name="name">gatewayapi.provider.form</field>
        <field name="model">gatewayapi.provider</field>
        <field name="arch" type="xml">
            <form string="GatewayAPI Provider">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_configure_gatewayapi_account" type="object" 
                                class="oe_stat_button" icon="fa-cog">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Configure Account</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="gatewayapi_platform"/>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <p>
                            Configure your GatewayAPI account credentials to send SMS messages.<br/>
                            You can configure your account in the settings button above.
                        </p>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="gatewayapi_provider_view_tree" model="ir.ui.view">
        <field name="name">gatewayapi.provider.tree</field>
        <field name="model">gatewayapi.provider</field>
        <field name="arch" type="xml">
            <list string="GatewayAPI Providers">
                <field name="name"/>
                <field name="gatewayapi_platform"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_gatewayapi_provider" model="ir.actions.act_window">
        <field name="name">GatewayAPI Providers</field>
        <field name="res_model">gatewayapi.provider</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_gatewayapi_provider"
              name="GatewayAPI"
              parent="sms.sms_menu_root"
              action="action_gatewayapi_provider"
              sequence="10"/>
</odoo>
