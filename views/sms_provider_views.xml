<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sms_provider_form_view_gatewayapi" model="ir.ui.view">
        <field name="name">sms.provider.form.view.gatewayapi</field>
        <field name="model">sms.provider</field>
        <field name="inherit_id" ref="sms.sms_provider_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='provider_type']" position="after">
                <div class="alert alert-info" role="alert" invisible="provider_type != 'gatewayapi'">
                    <p>
                        Configure your GatewayAPI account credentials to send SMS messages.<br/>
                        You can configure your account in the <a href="#" role="button" name="action_configure_gatewayapi_account" type="object" class="oe_link">GatewayAPI settings</a>.
                    </p>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
