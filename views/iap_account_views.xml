<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="iap_account_view_form_gatewayapi" model="ir.ui.view">
        <field name="name">iap.account.form.gatewayapi</field>
        <field name="model">iap.account</field>
        <field name="inherit_id" ref="iap.iap_account_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='service_name']" position="after">
                <field name="provider_type"/>
                <field name="gatewayapi_base_url"
                       options="{'invisible': [('provider_type', '!=', 'gatewayapi')]}"/>
                <field name="gatewayapi_token"
                       options="{'invisible': [('provider_type', '!=', 'gatewayapi')]}" password="True"/>
                <field name="gatewayapi_sender"
                       options="{'invisible': [('provider_type', '!=', 'gatewayapi')]}"/>
                <button name="action_test_gatewayapi_connection"
                        string="Test Connection"
                        type="object"
                        class="btn-primary"
                        options="{'invisible': [('provider_type', '!=', 'gatewayapi')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
